<h1> <%= @wiki.title %> </h1>

<div class="row">
  <div class="col-md-8">
    <h4>
    <p> <%= markdown(@wiki.body) %> </p>
    </h4>
    <h5>Created <%= time_ago_in_words @wiki.created_at %> ago by <%= @wiki.user.email || current_user.email %></h5>
    <p>âˆš<% if @wiki.private %>
      <small>private</small>
    <% else %>
      <small>public</small>
    <% end %> </p>
  </div>
  <% if current_user %>
  <div class="col-md-4">
    <%= link_to "Edit Wiki Post", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki Post", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Wiki posting?' } %>
    <% end %>
  </div>
</div>