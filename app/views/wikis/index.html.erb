<div class="container">

<h1>Wikis</h1>
<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <% unless wiki.private %>
            <%= link_to wiki.title, wiki %>
          </h4>
            <h5>Created <%= time_ago_in_words wiki.created_at %> ago by <%= wiki.user.email || current_user.email %></h5>
            <p>âˆš<% if wiki.private %>
              <small>private</small>
            <% else %>
              <small>public</small>
            <% end %> </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary' %>    
    </div>
    <div class="col-md-4">
      <% if current_user.premium? || current_user.admin? %>
    <h2>Your Private Wikis</h2>
      <% if @user.wikis.count >= 1 %>
        <% @user.wikis.each do |wiki| %>
            <% if wiki.private %>
              <p><%= link_to wiki.title, wiki %></p>
            <% end %>
        <% end %>
      <% else %>
        <p>You haven't created any private wikis yet!</p>
      <% end %>
    </div>
  <% end %>
</div>